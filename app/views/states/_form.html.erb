<%= form_for @state do |f| %>
    <%= f.error_messages %>
    <div class="cf state_field">
      <%= f.label :name, 'State Name' %>
      <%= f.text_field :name %>
    </div>
    <%= f.fields_for :cities do |builder|%>
        <%= render 'city_fields', :f => builder %>
    <% end %>
    <div class="cf" style="border-bottom: 1px solid #ccc; padding-bottom: 5px; margin-bottom: 10px">
      <%= link_to_add_fields "Add City", f, :cities %>
    </div>
    <div class="form-actions">
      <%= f.submit %>
    </div>
<% end %>