<%= form_for @state do |f| %>
    <%= f.error_messages %>
    <div class="state_field well form-inline">
      <%= f.label :name, 'State Name' %>
      <%= f.text_field :name %>
    </div>
    <%= f.fields_for :cities do |builder|%>
        <%= render 'city_fields', :f => builder %>
    <% end %>
    <div class="form-actions">
      <%= link_to_add_fields "Add City", f, :cities %>
    </div>
    <div class="form-actions">
      <%= f.submit :class=>"btn btn-large btn-primary" %>
    </div>
<% end %>